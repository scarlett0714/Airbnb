<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="650dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_accommodation_cover_img_cv"
        android:layout_width="370dp"
        android:layout_height="370dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/item_accommodation_cover_img_iv"
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:scaleType="fitCenter"
            android:src="@drawable/mv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_accommodation_place_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MV, 몰디브"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/item_accommodation_cover_img_cv"
        app:layout_constraintTop_toBottomOf="@+id/item_accommodation_cover_img_cv"/>

    <TextView
        android:id="@+id/item_accommodation_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6,596km 거리"
        android:textColor="@color/gray_color"
        android:textSize="18sp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@+id/item_accommodation_cover_img_cv"
        app:layout_constraintTop_toBottomOf="@+id/item_accommodation_place_tv"/>

    <TextView
        android:id="@+id/item_accommodation_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7월 12일~17일"
        android:textColor="@color/gray_color"
        android:textSize="18sp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@+id/item_accommodation_cover_img_cv"
        app:layout_constraintTop_toBottomOf="@+id/item_accommodation_distance_tv"/>

    <TextView
        android:id="@+id/item_accommodation_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="886,093/박"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@+id/item_accommodation_cover_img_cv"
        app:layout_constraintTop_toBottomOf="@+id/item_accommodation_date_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>